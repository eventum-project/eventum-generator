root = true

[*]
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.py]
indent_size = 4

[*.js]
indent_size = 2

[*.ts]
indent_size = 2

[*.tsx]
indent_size = 2

[*.css]
indent_size = 2

[*.md]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.{htm,html}]
indent_size = 2

[*.json]
indent_size = 4
